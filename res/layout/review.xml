<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:weightSum="1.0" >

    <LinearLayout
        android:id="@+id/topline"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@drawable/border_reg"
        android:orientation="vertical" >

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3" >

        <TextView
            android:id="@+id/reviewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/review_title"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/red"
            android:textSize="20sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.3"
        android:baselineAligned="false" >

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:layout_centerHorizontal="true"
           android:layout_centerVertical="true"
           android:layout_margin="20dp"
           android:layout_weight="1"
           android:background="@drawable/event_button"
           android:orientation="vertical"
           android:padding="10dp" >

            <LinearLayout
                android:id="@+id/r_bt1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="0.2"
                android:background="@drawable/event_button_selector"
                android:clickable="true"
                android:orientation="horizontal"
                android:padding="10dp" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="2dp"
                        android:contentDescription="@string/review_submit"
                        android:src="@drawable/star1" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:contentDescription="@string/review_submit"
                        android:src="@drawable/star1" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="2dp"
                        android:contentDescription="@string/review_submit"
                        android:src="@drawable/star1" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="2dp"
                        android:contentDescription="@string/review_submit"
                        android:src="@drawable/star1" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:contentDescription="@string/review_submit"
                        android:src="@drawable/star1" />

                </LinearLayout>

                <TextView
                    android:id="@+id/r_tx1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.6"
                    android:paddingLeft="5dp"
                    android:text="@array/reviews_marks"
                    android:textAppearance="@null"
                    android:textColorHint="@color/review_item"
                    android:textSize="16sp" />

            </LinearLayout>

			<LinearLayout
			    android:id="@+id/r_bt2"
			    android:layout_width="match_parent"
			    android:layout_height="0dp"
			    android:layout_marginBottom="5dp"
			    android:layout_weight="0.2"
			    android:background="@drawable/event_button_selector"
			    android:clickable="true"
			    android:orientation="horizontal"
			    android:padding="10dp" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="2dp"
                        android:contentDescription="@string/review_submit"
                        android:src="@drawable/star1" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:contentDescription="@string/review_submit"
                        android:src="@drawable/star1" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="2dp"
                        android:contentDescription="@string/review_submit"
                        android:src="@drawable/star1" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="2dp"
                        android:contentDescription="@string/review_submit"
                        android:src="@drawable/star1" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:contentDescription="@string/review_submit"
                        android:src="@drawable/star2" />

                </LinearLayout>

                <TextView
                    android:id="@+id/r_tx2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.6"
                    android:paddingLeft="5dp"
                    android:text="@array/reviews_marks"
                    android:textAppearance="@null"
                    android:textColorHint="@color/review_item"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/r_bt3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="0.2"
                android:background="@drawable/event_button_selector"
                android:clickable="true"
                android:orientation="horizontal"
                android:padding="10dp" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="2dp"
                        android:contentDescription="@string/review_submit"
                        android:src="@drawable/star1" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:contentDescription="@string/review_submit"
                        android:src="@drawable/star1" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="2dp"
                        android:contentDescription="@string/review_submit"
                        android:src="@drawable/star1" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="2dp"
                        android:contentDescription="@string/review_submit"
                        android:src="@drawable/star2" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:contentDescription="@string/review_submit"
                        android:src="@drawable/star2" />

                </LinearLayout>

                <TextView
                    android:id="@+id/r_tx3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.6"
                    android:paddingLeft="5dp"
                    android:text="@array/reviews_marks"
                    android:textAppearance="@null"
                    android:textColorHint="@color/review_item"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/r_bt4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="0.2"
                android:background="@drawable/event_button_selector"
                android:clickable="true"
                android:orientation="horizontal"
                android:padding="10dp" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="2dp"
                        android:contentDescription="@string/review_submit"
                        android:src="@drawable/star1" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:contentDescription="@string/review_submit"
                        android:src="@drawable/star1" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="2dp"
                        android:contentDescription="@string/review_submit"
                        android:src="@drawable/star2" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="2dp"
                        android:contentDescription="@string/review_submit"
                        android:src="@drawable/star2" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:contentDescription="@string/review_submit"
                        android:src="@drawable/star2" />

                </LinearLayout>

                <TextView
                    android:id="@+id/r_tx4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.6"
                    android:paddingLeft="5dp"
                    android:text="@array/reviews_marks"
                    android:textAppearance="@null"
                    android:textColorHint="@color/review_item"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/r_bt5"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="0.2"
                android:background="@drawable/event_button_selector"
                android:clickable="true"
                android:orientation="horizontal"
                android:padding="10dp" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="2dp"
                        android:contentDescription="@string/review_submit"
                        android:src="@drawable/star1" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:contentDescription="@string/review_submit"
                        android:src="@drawable/star2" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="2dp"
                        android:contentDescription="@string/review_submit"
                        android:src="@drawable/star2" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="2dp"
                        android:contentDescription="@string/review_submit"
                        android:src="@drawable/star2" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:contentDescription="@string/review_submit"
                        android:src="@drawable/star2" />

                </LinearLayout>

                <TextView
                    android:id="@+id/r_tx5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.6"
                    android:paddingLeft="5dp"
                    android:text="@array/reviews_marks"
                    android:textAppearance="@null"
                    android:textColorHint="@color/review_item"
                    android:textSize="16sp" />

            </LinearLayout>

        </LinearLayout>
        

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4" >

        <Button
            android:id="@+id/r_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/selector_buton_reg"
            android:text="@string/review_submit"
            android:textColor="@color/white" />

    </RelativeLayout>
    
    <LinearLayout
        android:id="@+id/bottomline"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/border_reg"
        android:orientation="vertical" >
    </LinearLayout>
</LinearLayout>