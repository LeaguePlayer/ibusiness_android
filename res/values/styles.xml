<resources xmlns:android="http://schemas.android.com/apk/res/android">
	<style name="Theme.Custom" parent="@android:style/Theme.NoTitleBar">
		<item name="android:windowContentOverlay">@null</item>
	</style>
	<style name="textEventTabs" parent="Theme.Custom">
	    <item name="android:textColor">#000000</item>
	    <item name="android:textSize">12sp</item>
	    
	    <item name="android:shadowColor">#FFFFFF</item>
	    <item name="android:shadowDx">2</item>
	    <item name="android:shadowDy">2</item>
	    <item name="android:shadowRadius">3</item>
	</style>
	
	<style name="fioSpeaker" parent="Theme.Custom">
	    <item name="android:textColor">#d20313</item>
	    <item name="android:textSize">18sp</item>
	    
	    <item name="android:shadowColor">#FFFFFF</item>
	    <item name="android:shadowDx">2</item>
	    <item name="android:shadowDy">2</item>
	    <item name="android:shadowRadius">3</item>
	</style>
	
	<style name="textReportSpeaker" parent="Theme.Custom">
	    <item name="android:textColor">#000000</item>
	    <item name="android:textSize">12sp</item>
	    
	    <item name="android:shadowColor">#FFFFFF</item>
	    <item name="android:shadowDx">2</item>
	    <item name="android:shadowDy">2</item>
	    <item name="android:shadowRadius">3</item>
	</style>
	
	<style name="WhiteShadow" parent="Theme.Custom">
	    <item name="android:shadowColor">#FFFFFF</item>
	    <item name="android:shadowDx">2</item>
	    <item name="android:shadowDy">2</item>
	    <item name="android:shadowRadius">2</item>
	</style>
	
	<style name="WhiteShadow1px" parent="Theme.Custom">
	    <item name="android:shadowColor">#FFFFFF</item>
	    <item name="android:shadowDx">0</item>
	    <item name="android:shadowDy">1</item>
	    <item name="android:shadowRadius">1</item>
